{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["bun-types"],
    "jsx": "react-jsx"
  },
  "include": ["src/**/*", "drizzle.config.ts", "scripts/**/*"],
  "exclude": ["src/sprite/**/*"]
}
