{
  "name": "eve",
  "module": "src/index.ts",
  "type": "module",
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^25.0.9",
    "@types/react": "^19.2.8",
    "@types/uuid": "^10.0.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "oxlint": "^1.39.0",
    "typescript": "5.4.5"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@mariozechner/pi-agent-core": "^0.48.0",
    "@mariozechner/pi-ai": "^0.48.0",
    "@mariozechner/pi-tui": "^0.49.2",
    "@mendable/firecrawl-js": "^4.11.1",
    "better-sqlite3": "^12.6.0",
    "cac": "^6.7.14",
    "cheerio": "^1.1.2",
    "croner": "^8.1.2",
    "drizzle-kit": "^0.31.8",
    "drizzle-orm": "^0.45.1",
    "hono": "^4.11.4",
    "open": "^11.0.0",
    "react": "^19.2.3",
    "uuid": "^13.0.0",
    "zod": "^3.24.1"
  },
  "scripts": {
    "ingest": "bun run src/index.ts ingest",
    "query": "bun run src/index.ts query",
    "clean": "bun run src/index.ts clean",
    "start": "bun run src/index.ts",
    "build": "bun run scripts/generate-schema.ts && rm -rf dist && tsc -p tsconfig.build.json && mkdir -p dist/drizzle && cp -R drizzle/* dist/drizzle/ && cp schema.json dist/",
